{
  "name": "pbs-editor-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "build:pkg": "tsc -p tsconfig.pkg.json && npx pkg dist-pkg/index.js --targets node18-win-x64 --output ../release/PBSEditor.exe"
  },
  "dependencies": {
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@pbs/shared": "file:../shared",
    "@types/express": "^4.17.21",
    "pkg": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
